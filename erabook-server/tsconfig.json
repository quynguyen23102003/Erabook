{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"importHelpers": true,
		"removeComments": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"pretty": true,
		"incremental": true,
		"outDir": "./dist"
	},
	"include": ["src", "others", "tests"],
	"exclude": ["node_modules"]
}
